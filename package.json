{
  "name": "trading-bot",
  "version": "1.0.0",
  "main": "dist/src/bot.js",
  "source": "src/bot.ts",
  "license": "MIT",
  "dependencies": {
    "@discordjs/core": "^0.6.0",
    "@polygon.io/client-js": "^7.2.5",
    "discord.js": "^14.11.0",
    "node-cron": "^3.0.2",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "build": "yarn clean && tsc && yarn copy-images",
    "clean": "rm -rf dist",
    "copy-images": "cp ./src/images ./dist/src -r",
    "start": "node dist/src/bot.js",
    "start:inspect": "node --inspect dist/src/bot.js",
    "dev": "nodemon -e ts --exec \"yarn run build && yarn start:inspect\""
  }
}
